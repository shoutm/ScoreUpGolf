<h1>Listing golf_fields</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Region</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @golf_fields.each do |golf_field| %>
  <tr>
    <td><%= golf_field.name %></td>
    <td><%= golf_field.region %></td>
    <td><%= link_to 'Show', scaffold_golf_field_path(golf_field) %></td>
    <td><%= link_to 'Edit', edit_scaffold_golf_field_path(golf_field) %></td>
    <td><%= link_to 'Destroy', scaffold_golf_field_path(golf_field), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

