<%= javascript_include_tag "logic/common.js.coffee" %>
<%= javascript_include_tag "logic/competition_scoring" %>
<%= javascript_include_tag "footer" %>
<div id="data_not_loaded">
  <%= button_tag "Load competition data", id: "load_data_button" %>
</div>
<div id="data_loaded">
  <div class="header">
    Hole No: <label id="hole_no"></label><br>
  </div>
  <div class="score_form">
    <div class="shot_score">
      <%= image_tag("/assets/minus.png", id: "shot_score_minus", size: "35x35") %>
      <em id="shot_num">4</em>
      <%= image_tag("/assets/plus.png", id: "shot_score_plus", size: "35x35") %>
    </div> 
    <div class="pat_score">
      <%= image_tag("/assets/minus.png", id: "pat_score_minus", size: "35x35") %>
      <em id="pat_num">2</em>
      <%= image_tag("/assets/plus.png", id: "pat_score_plus", size: "35x35") %>
    </div> 
  </div>
  <div id="footer">
    <div class="full_width">
      <%= button_tag "このホールのスコアを送信", id: "submit" %>
    </div>
    <div class="half_width">
      <%= button_tag "自分の組のスコアを確認", id: "my_party_score" %>
    </div>
    <div class="half_width">
      <%= button_tag "他の組のスコアを確認", id: "other_party_score" %>
    </div>
  </div>
</div>
