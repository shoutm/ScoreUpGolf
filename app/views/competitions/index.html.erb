<h1>Listing competitions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Golf field</th>
    <th>Competition date</th>
    <th>Firsthalf cource</th>
    <th>Secondhalf cource</th>
    <th>Host user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @competitions.each do |competition| %>
  <tr>
    <td><%= competition.name %></td>
    <td><%= competition.golf_field_id %></td>
    <td><%= competition.competition_date %></td>
    <td><%= competition.firsthalf_cource_id %></td>
    <td><%= competition.secondhalf_cource_id %></td>
    <td><%= competition.host_user_id %></td>
    <td><%= link_to 'Show', competition %></td>
    <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
    <td><%= link_to 'Destroy', competition, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

